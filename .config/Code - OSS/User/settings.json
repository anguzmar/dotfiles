{
    "editor.fontFamily": "'Monaco','Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
    "editor.fontSize": 14,
    "editor.wordWrapColumn": 100,
    "editor.lineNumbers": "relative",
    "workbench.colorTheme": "Night Owl",
    "python.formatting.blackArgs": ["--line-length", "100"],
    "workbench.editor.showTabs": true,
    "workbench.startupEditor": "newUntitledFile",
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["<leader>", "d"],
            "commands": ["editor.action.peekDefinition"]
        },
        {
            "before": ["<leader>", "b"],
            "commands": ["workbench.debug.viewlet.action.removeAllBreakpoints"]
        },
    ],
    "terminal.integrated.fontFamily": "Inconsolata",
    "editor.rulers": [
        100
    ],
    "git.autofetch": true,
    "python.linting.pylintEnabled": false,
    "vim.leader": ",",
    "vim.handleKeys":{
        "<C-d>": true,
        "<C-w>": false,
        "<C-k>": false,
    },
    "vim.textwidth": 100,
    "sync.gist": "014ff4f98b11de2ba52fc67bbc3abcbd",
    "terminal.integrated.shell.linux": "/bin/zsh",
    "editor.formatOnSave": true,
    "python.formatting.provider": "black",
    "python.linting.enabled": true,
    "python.formatting.blackPath": "/usr/bin/black",
    "python.pythonPath": "/usr/bin/python",
}